<div class="container mt-5">
    <h1 class="text-center">Bienvenidos a la PÁGINA de productos</h1>

    <div class="mt-4">
        <h2>Paginación</h2>
        <div class="list-group">
            {{#each products}}
                <div class="list-group-item">
                    <strong>Nombre:</strong> {{this.title}} - 
                    <strong>Código:</strong> {{this.code}} - 
                    <strong>Precio:</strong> ${{this.price}}
                </div>
            {{/each}}
        </div>

        <div class="d-flex justify-content-center mt-4">
            {{#if hasPrevPage}}
                <a href="/productos?pageNum={{prevPage}}" class="btn btn-primary me-2">Anterior</a>
            {{/if}}
            <span class="align-self-center">Página {{page}}</span>
            {{#if hasNextPage}}
                <a href="/productos?pageNum={{nextPage}}" class="btn btn-primary ms-2">Siguiente</a>
            {{/if}}
        </div>
    </div>
</div>

